server {

    location ~ /.well-known {
            allow all;
    }

    index index.html;

    root /var/www/{{letsencrypt_domain_name}}{{default_site}};

    listen 443 ssl;

    server_name {{letsencrypt_domain_name}} {{letsencrypt_domain_alternatives | join(" ") }};

    include /etc/nginx/snippets/ssl-{{letsencrypt_domain_name}}.conf;
    include /etc/nginx/snippets/ssl-params.conf;

    include /etc/nginx/conf.d/{{letsencrypt_domain_name}}/*.conf;
    
}

server {
    listen 80;
    listen [::]:80;
    server_name {{letsencrypt_domain_name}} {{letsencrypt_domain_alternatives | join(" ")}};
    return 301 https://$host$request_uri;
}

